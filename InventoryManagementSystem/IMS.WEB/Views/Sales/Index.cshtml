@model List<IMS.DAL.Models.Sales>
@{
    ViewData["Title"] = "Sales Invoices";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-receipt"></i> Sales Invoices</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Invoice
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Invoice No</th>
                            <th>Date</th>
                            <th>Customer Name</th>
                            <th>Sales Type</th>
                            <th class="text-end">Amount</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var invoice in Model)
                            {
                                <tr>
                                    <td><strong>@invoice.InvNo</strong></td>
                                    <td>@invoice.SalesDate.ToString("dd MMM yyyy")</td>
                                    <td>@invoice.CustomerName</td>
                                    <td>
                                        @if (invoice.SalesType == "Cash")
                                        {
                                            <span class="badge bg-success">Cash</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">Credit</span>
                                        }
                                    </td>
                                    <td class="text-end">@invoice.Amount.ToString("N2")</td>
                                    <td class="text-center">
                                        <a asp-action="View" asp-route-id="@invoice.SalesID"
                                           class="btn btn-sm btn-info" title="View">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@invoice.SalesID"
                                           class="btn btn-sm btn-warning" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="PrintPdf" asp-route-id="@invoice.SalesID"
                                           class="btn btn-sm btn-danger" title="Print PDF" target="_blank">
                                            <i class="bi bi-file-pdf"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted">
                                    <i class="bi bi-inbox" style="font-size: 2rem;"></i>
                                    <p class="mt-2">No invoices found</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>