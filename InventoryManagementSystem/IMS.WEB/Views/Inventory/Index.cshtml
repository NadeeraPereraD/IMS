@model List<IMS.DAL.Models.Inventory>
@{
    ViewData["Title"] = "Inventory";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-box-seam"></i> Inventory Summary</h2>
        <button class="btn btn-success" onclick="window.print()">
            <i class="bi bi-printer"></i> Print Report
        </button>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Product Name</th>
                            <th class="text-center">Total Quantity</th>
                            <th class="text-end">Last Unit Price</th>
                            <th class="text-end">Last Selling Price</th>
                            <th>Last Updated</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            int rowNum = 1;
                            foreach (var item in Model)
                            {
                                <tr class="@(item.TotalQuantity <= 0 ? "table-danger" : item.TotalQuantity < 10 ? "table-warning" : "")">
                                    <td>@rowNum</td>
                                    <td>
                                        <strong>@item.ProductName</strong>
                                        @if (item.TotalQuantity <= 0)
                                        {
                                            <span class="badge bg-danger ms-2">Out of Stock</span>
                                        }
                                        else if (item.TotalQuantity < 10)
                                        {
                                            <span class="badge bg-warning text-dark ms-2">Low Stock</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="badge @(item.TotalQuantity <= 0 ? "bg-danger" : item.TotalQuantity < 10 ? "bg-warning text-dark" : "bg-success")">
                                            @item.TotalQuantity
                                        </span>
                                    </td>
                                    <td class="text-end">@(item.LastUnitPrice?.ToString("N2") ?? "-")</td>
                                    <td class="text-end">@(item.LastSellingPrice?.ToString("N2") ?? "-")</td>
                                    <td>@item.LastUpdated.ToString("dd MMM yyyy HH:mm")</td>
                                </tr>
                                rowNum++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted">
                                    <i class="bi bi-inbox" style="font-size: 2rem;"></i>
                                    <p class="mt-2">No inventory items found</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card text-white bg-success shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title"><i class="bi bi-check-circle"></i> In Stock</h5>
                        <h2>@Model.Count(x => x.TotalQuantity >= 10)</h2>
                        <p class="mb-0">Products</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-warning shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title"><i class="bi bi-exclamation-triangle"></i> Low Stock</h5>
                        <h2>@Model.Count(x => x.TotalQuantity > 0 && x.TotalQuantity < 10)</h2>
                        <p class="mb-0">Products</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-danger shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title"><i class="bi bi-x-circle"></i> Out of Stock</h5>
                        <h2>@Model.Count(x => x.TotalQuantity <= 0)</h2>
                        <p class="mb-0">Products</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    @@media print {
        .btn, .no-print {
            display: none !important;
        }

        body {
            background: white;
        }

        .card {
            border: 1px solid #000;
            box-shadow: none;
        }
    }
</style>